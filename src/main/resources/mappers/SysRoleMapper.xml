<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.bjfu.journal.mapper.SysRoleMapper">

  <select id="listAll" resultType="SysRole">
    SELECT * FROM sys_role ORDER BY id
  </select>

  <select id="listByUserId" resultType="SysRole">
    SELECT r.*
    FROM sys_role r
    JOIN sys_user_role ur ON ur.role_id = r.id
    WHERE ur.user_id = #{userId}
    ORDER BY r.id
  </select>

  <select id="selectByCode" resultType="SysRole">
    SELECT * FROM sys_role WHERE code = #{code}
  </select>

</mapper>
