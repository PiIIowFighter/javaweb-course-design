<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.bjfu.journal.mapper.SysRolePermMapper">

  <select id="listPermCodesByRoleIds" resultType="string">
    SELECT DISTINCT perm_code
    FROM sys_role_perm
    WHERE role_id IN
    <foreach item="id" collection="roleIds" open="(" separator="," close=")">
      #{id}
    </foreach>
  </select>

  <delete id="deleteByRoleId">
    DELETE FROM sys_role_perm WHERE role_id=#{roleId}
  </delete>

  <insert id="insert">
    INSERT INTO sys_role_perm(role_id, perm_code) VALUES(#{roleId}, #{permCode})
  </insert>

</mapper>
